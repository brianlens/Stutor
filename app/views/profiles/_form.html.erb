
<%= form_for @profile do |f| %>

    <div class="form-group">
       <%= f.label :name %><br>
       <%= f.text_field :name, class: "form-control"%>
    </div>
    <br>
    <div class="form-group">
       <%= f.label :city %><br>
       <%= f.text_field :city, class: "form-control"%>
    </div>
    <br>
    <div class="form-group">
       <%= f.label :description %><br>
       <%= f.text_field :price, class: "form-control"%>
    </div>
    <br>
    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
    <br>

<% end %>
