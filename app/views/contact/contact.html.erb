<%= stylesheet_link_tag  'application', 'contact', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

<div class=s3Top><h1>Contact</h1>
</div>

  <div id="bigBox">
    <h2>Feel free to contact us at any time. Leave a comment or just hit one of these social buttons!</h2>
    <ul class="share-buttons">
        <li><a href="" title="Share on Facebook" target="_blank"><%= image_tag( 'Facebook.png' ) %></a></li>
        <li><a href="www.twitter.com" target="_blank" title="Tweet"><%= image_tag( 'Twitter.png' ) %></a></li>
        <li><a href="" target="_blank" title="Share on LinkedIn"><%= image_tag( 'LinkedIn.png' ) %></a></li>
        <li><a href="mailto:" target="_blank" title="Email"><%= image_tag( 'Email.png' ) %></a></li>
    </ul>
  </div>


    <div id="form-main">
      <div id="form-div">
      <form class="form" id="form1">

       <p class="name">
         <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" />
        </p>

        <p class="email">
        <input name="email" type="text" class="validate[required,custom[email]] feedback-input" id="email" placeholder="Email" />
        </p>

        <p class="text">
         <textarea name="text" class="validate[required,length[6,300]] feedback-input" id="comment" placeholder="Comment"></textarea>
       </p>


          <div class="submit">
          <input type="submit" value="SEND" id="button-blue"/>
          <div class="ease"></div>
        </div>
      </form>
      </div>
    </div>
